<h1>Lista de filmes</h1>

<%= form_with url: movies_path, method: :get do %>
    <div>
        <%= check_box_tag 'released', 'true', params[:released] == 'true' %>
        <%= label_tag 'released', 'Já lançado' %>
    </div>

    <div>
        <%= check_box_tag 'upcoming', 'true', params[:upcoming] == 'true' %>
        <%= label_tag 'upcoming', 'A ser lançado' %>
    </div>

    <div>
        <%= check_box_tag 'draft', 'true', params[:draft] == 'true' %>
        <%= label_tag 'draft', 'Rascunhos' %>
    </div>

    <div>
        <%= check_box_tag 'published', 'true', params[:published] == 'true' %>
        <%= label_tag 'published', 'Publicados' %>
    </div>

    <div>
        <%= submit_tag 'Filtrar'%>
    </div>
<% end %> <br>

<% @movies.each do |movie| %>
    <%= link_to movie do %>
        <% if movie.poster.attached? %>
            <%= image_tag movie.poster, size: "50x75", alt: "#{movie.title} Poster" %>
        <% end %> <br>

        <%= "#{movie.title}, #{movie.release_year}, #{movie.release_year <= Time.current.year ? 'Já lançado' : 'A ser lançado'}" %>
    <% end %> <br> <br>
<%end%> <br>

<%= link_to 'Cadastrar novo filme', :new_movie %>